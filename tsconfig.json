{
  "compilerOptions": {
    "target": "ES2020", // For async/await and private fields
    "module": "CommonJS", // Required by Hardhat
    "moduleResolution": "node", // Resolve node modules
    "esModuleInterop": true, // Fix fs/path import errors
    "skipLibCheck": true, // Skip broken type defs
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist", // Optional: compiled output
    "noEmit": false, // Required to emit .js if compiling
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["app/*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/mainpages/*": ["mainpages/*"],
      "@/contracts/*": ["contracts/*"],
      "@/config/*": ["config/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "context/**/*.ts",
    "context/**/*.tsx",
    "mainpages/**/*.ts",
    "mainpages/**/*.tsx",
    "config/**/*.ts",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    ".next/types/**/*.ts",
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "typechain-types"
  ],
  "exclude": [
    "node_modules"
  ]
}
